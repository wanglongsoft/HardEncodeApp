<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical_guideline_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.20" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical_guideline_40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.40" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical_guideline_60"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.60" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical_guideline_80"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.80" />

    <SurfaceView
        android:id="@+id/surface_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/preview_av"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="预览"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/vertical_guideline_20"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/start_av"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="录制"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/vertical_guideline_40"
        app:layout_constraintStart_toEndOf="@+id/vertical_guideline_20" />

    <Button
        android:id="@+id/record_bw"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="黑白"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/vertical_guideline_60"
        app:layout_constraintStart_toEndOf="@+id/vertical_guideline_40" />

    <Button
        android:id="@+id/record_normal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="正常"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/vertical_guideline_80"
        app:layout_constraintStart_toEndOf="@+id/vertical_guideline_60" />

    <Button
        android:id="@+id/stop_av"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="停止"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/vertical_guideline_80" />

    <Button
        android:id="@+id/save_av"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="导出"
        app:layout_constraintBottom_toTopOf="@+id/record_bw"
        app:layout_constraintEnd_toStartOf="@+id/vertical_guideline_20"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>